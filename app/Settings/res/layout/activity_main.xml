        android:background="#1f000000"/>-->
    <!--<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/device_container"/>-->
    <LinearLayout
        android:id="@+id/system_update_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
      <TextView   
          android:id="@+id/system_update_auto_content_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="30sp"
          android:textColor="#000"
          android:layout_marginBottom="4dp"/>
      <TextView       
          android:id="@+id/system_update_auto_content_info"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/reset_checkbox_title_text_size"
          android:layout_marginBottom="64dp"/>
      <TextView
          android:id="@+id/system_update_auto_content_details"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/reset_checkbox_title_text_size"
          android:maxLines="5"
          android:ellipsize="end"/>
    </LinearLayout>
  <Button
            android:id="@+id/action_button1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="12dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"/>
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar_layout"
        android:orientation="vertical"
        android:visibility="gone">   
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:indeterminate="true"/>
     <TextView
          android:id="@+id/progress_percent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/reset_checkbox_title_text_size"
          android:ellipsize="end"
          />
      <TextView
          android:id="@+id/progress_percent_note"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/reset_checkbox_title_text_size"
          android:text="@string/install_in_progress_note"
          android:layout_marginTop="12dp"/>
  </LinearLayout>    
</LinearLayout>
