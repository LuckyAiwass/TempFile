<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/action_down_ly"
        layout="@layout/ly_switch_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="8dp"
        android:background="@android:color/darker_gray" />

    <include
        android:id="@+id/action_up_ly"
        layout="@layout/ly_switch_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/colorLightGray" />

    <include
        android:id="@+id/wakeup_ly"
        layout="@layout/ly_switch_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/colorLightGray" />

    <RelativeLayout
        android:id="@+id/key_remap_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_button">

        <TextView
            android:id="@+id/key_remap_tv"
            style="@style/titleTextTheme"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/title_activity"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/arrow" />

    </RelativeLayout>

</LinearLayout>