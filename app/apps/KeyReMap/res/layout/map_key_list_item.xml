<?xml version="1.0" encoding="utf-8"?>
<com.jplus.view.SlideMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <LinearLayout
        android:id="@+id/root_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/key_mapped_item_bg_a"
        android:orientation="vertical">

        <TextView
            android:id="@+id/key_code_tv"
            style="@style/keyListTextPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/map_key_code" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorLightGray" />

        <TextView
            android:id="@+id/key_name_tv"
            style="@style/keyListTextSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/map_key_name" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorLightGray" />

        <TextView
            android:id="@+id/key_type_tv"
            style="@style/keyListTextSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/map_key_type" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/key_meta_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="4dp" />

            <TextView
                android:id="@+id/key_meta_tv"
                style="@style/keyListTextSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/icon"
                android:text="@string/view_remap_action" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorLightGray" />

        <TextView
            android:id="@+id/key_down_tv"
            style="@style/keyListTextSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/map_key_down_bc" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorLightGray" />

        <TextView
            android:id="@+id/key_up_tv"
            style="@style/keyListTextSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/map_key_up_bc" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorLightGray" />

        <TextView
            android:id="@+id/key_wakeup_tv"
            style="@style/keyListTextSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/map_key_wakeup" />
    </LinearLayout>

    <Button
        android:id="@+id/menu_delete"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="@drawable/key_mapped_item_bg_d"
        android:text="@string/delete"
        android:textColor="@color/colorLightGray"
        android:textSize="16sp" />

</com.jplus.view.SlideMenuLayout>
