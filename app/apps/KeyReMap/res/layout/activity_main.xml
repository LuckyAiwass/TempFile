<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".component.RemapActivity">

    <LinearLayout
        android:id="@+id/key_code_text_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/titleTextTheme"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="@string/text_title_keycode" />

        <TextView
            android:id="@+id/key_code"
            style="@style/titleTextTheme"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:layout_weight="2"
            android:text="@string/text_title_keycode_hint" />

    </LinearLayout>

    <View
        android:id="@+id/key_text_deliver_ly"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/key_code_text_ly"
        android:layout_marginStart="8dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/key_name_text_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/key_text_deliver_ly"
        android:orientation="horizontal">

        <TextView
            style="@style/titleTextTheme"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="@string/text_title_keyname" />

        <TextView
            android:id="@+id/key_name"
            style="@style/titleTextTheme"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:layout_weight="2"
            android:text="@string/text_title_keyname_hint" />
    </LinearLayout>

    <View
        android:id="@+id/key_type_deliver_ly"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@+id/key_name_text_ly"
        android:background="@color/colorLightGray" />

    <TextView
        android:id="@+id/key_type_ly"
        style="@style/titleTextTheme"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/key_type_deliver_ly"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="@string/text_title_remap_type"
        android:textColor="@color/colorPrimary" />

    <View
        android:id="@+id/key_text_deliver1_ly"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/key_type_ly"
        android:layout_marginStart="8dp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:id="@+id/key_map_reset_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/key_text_deliver1_ly"
        android:background="@drawable/common_button">

        <TextView
            android:id="@+id/key_map_reset"
            style="@style/titleTextTheme"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/action_reset" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/arrow" />

    </RelativeLayout>

    <ListView
        android:id="@+id/key_type_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/key_map_reset_ly"
        android:divider="@null">

    </ListView>

    <View
        android:id="@+id/key_text_deliver2_ly"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@+id/key_type_list"
        android:background="@color/colorLightGray" />

    <RelativeLayout
        android:id="@+id/key_mapped_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/key_text_deliver2_ly"
        android:background="@drawable/common_button">

        <TextView
            android:id="@+id/key_mapped"
            style="@style/titleTextTheme"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/title_activity_viewer"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/arrow" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/key_mapped_ly"
        android:background="@color/colorLightGray" />

</RelativeLayout>
