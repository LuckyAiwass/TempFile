<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/colorLightGray" />

    <RelativeLayout
        android:id="@+id/fg_broadcast_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_button">

        <RelativeLayout
            android:id="@+id/fg_broadcast_edit_ly"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:padding="6dp">

            <ImageView
                android:id="@+id/fg_broadcast_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:src="@mipmap/edit" />
        </RelativeLayout>

        <TextView
            android:id="@+id/fg_broadcast_text"
            style="@style/titleTextTheme"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_toEndOf="@+id/fg_broadcast_edit_ly"
            android:text="@string/text_broadcast_action_hint" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:id="@+id/fg_intent_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_button">

        <RelativeLayout
            android:id="@+id/fg_intent_add_ly"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp">

            <ImageView
                android:id="@+id/fg_bundle_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:src="@mipmap/intent_ext_add" />
        </RelativeLayout>

        <TextView
            android:id="@+id/fg_intent_ext"
            style="@style/titleTextTheme"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_toEndOf="@+id/fg_intent_add_ly"
            android:text="@string/intent_ext_broadcast" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/darker_gray" />

    <ListView
        android:id="@+id/fg_intent_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/colorLightGray" />

    <RelativeLayout
        android:id="@+id/confirm_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_button">

        <TextView
            android:id="@+id/confirm_tv"
            style="@style/titleTextTheme"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="@android:string/ok"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/arrow" />

    </RelativeLayout>
</LinearLayout>