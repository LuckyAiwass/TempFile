<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>

    <TextView
        android:id="@+id/keypad_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/keypad_text"
        android:textSize="20dip"
        android:layout_margin="15px" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/key_code"
        />
        <TextView
            android:id="@+id/key_code_value"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"/>
    </LinearLayout>
<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content"  
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/menu"
        android:text="@string/keypad_menu"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_margin="1px"
        android:textSize="15dip" />    
    
     <TextView
        android:id="@+id/home"
        android:text="@string/keypad_home"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_margin="1px"
        android:textSize="15dip" />
     
     <TextView
        android:id="@+id/back"
        android:text="@string/keypad_back"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_margin="1px"
        android:textSize="15dip" />
      

    <TextView
        android:id="@+id/up"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_margin="2px"
        android:text="@string/keypad_volume_up"
        android:textSize="15dip" />

    <TextView
        android:id="@+id/download"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_margin="2px"
        android:text="@string/keypad_volume_down"
        android:textSize="15dip" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="15px"
    >
        <Button
            android:id="@+id/pass"
            android:text="@string/pass"
            android:textSize="20dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
        ></Button>
        <Button
            android:id="@+id/fail"
            android:text="@string/fail"
            android:textSize="20dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
        ></Button>
    </LinearLayout>

</LinearLayout>
