<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"   
 >

    <EditText
        android:id="@+id/icc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="@string/icc_hint"
        android:editable="false" />
<LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="48dp"
        android:layout_width="fill_parent"
    >
        <TextView
            android:id="@+id/urovo_fi_text"
            android:text="@string/urovo_fi_text"
            android:textSize="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        ></TextView>
    <View android:layout_width="20dp"
            android:layout_height="48dp"
            />
    <EditText 
        android:id="@+id/urovo_fi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:singleLine="true"
        android:textSize="20dip"
        android:hint="@string/urovo_fi_text_hint" />
</LinearLayout>
<LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="48dp"
        android:layout_width="fill_parent"
    >
        <TextView
            android:id="@+id/urovo_di_text"
            android:text="@string/urovo_di_text"
            android:textSize="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        ></TextView>
    <View android:layout_width="20dp"
            android:layout_height="48dp"
            />
    <EditText 
        android:id="@+id/urovo_di"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:singleLine="true"
        android:textSize="20dip"
        android:hint="@string/urovo_di_text_hint" />
</LinearLayout>
<LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="48dp"
        android:layout_width="fill_parent"
    >
	<TextView
            android:id="@+id/voltage_text"
            android:text="@string/voltage_text"
            android:textSize="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        ></TextView>
    <RadioGroup  
        android:id="@+id/radioGroupID"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"
        android:orientation="horizontal">  
		
  
        <RadioButton  
            android:id="@+id/radio1"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"  
            android:text="@string/voltage1"  
            android:checked="true"
            />  
        <RadioButton  
                android:id="@+id/radio2"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"  
            android:text="@string/voltage2"/>  
        <RadioButton  
                android:id="@+id/radio3"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"  
            android:text="@string/voltage3"/>  
    </RadioGroup>
</LinearLayout>
    <View android:layout_width="fill_parent"
            android:layout_height="20dp"
            />
    <LinearLayout
        android:id="@+id/read_layout"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="48dp"
        android:layout_width="fill_parent"
    ></LinearLayout>
   <!--  <Button
            android:id="@+id/read"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/read_icc"
            android:textStyle="bold" /> -->
 <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="15px"
    >
        <Button
            android:id="@+id/pass"
            android:text="@string/pass"
            android:textSize="20dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
        ></Button>
        <Button
            android:id="@+id/fail"
            android:text="@string/fail"
            android:textSize="20dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
        ></Button>
    </LinearLayout>  
</LinearLayout>
